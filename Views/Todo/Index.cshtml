@model IEnumerable<Todo>

@{
    ViewData["Title"] = "My Todos";
}

<div class="container-fluid px-2 px-md-4 mt-5">
    <div class="row mb-4">
        <div class="col-12 col-md-8">
            <h1 class="fs-3 fs-md-1">My Todos List</h1>
        </div>
        <div class="col-12 col-md-4 mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-primary w-100 w-md-auto">
                <i class="fas fa-plus"></i> Add Todo
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No todos found. <a asp-action="Create">Create a new todo</a></p>
        </div>
    }
    else
    {
        @* <!-- Version Desktop (Tableau) --> *@
        <div class="d-none d-lg-block">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th class="d-none d-xl-table-cell">Description</th>
                            <th class="d-none d-lg-table-cell">Due Date</th>
                            <th>Status</th>
                            <th class="d-none d-xl-table-cell">Created</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-truncate d-block">@item.Title</strong>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted text-truncate d-block">
                                        @(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)
                                    </small>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <small>
                                        @if (item.DueDate.HasValue)
                                        {
                                            @item.DueDate.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    @if (item.IsCompleted)
                                    {
                                        <span class="badge bg-success">Terminée</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">En cours</span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.CreatedAt.ToString("dd/MM")</small>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center align-items-center flex-wrap p-2 bg-light rounded border border-secondary-subtle">
                                        <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="m-0">
                                            @if (item.IsCompleted)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-secondary" title="Marquer comme non complétée">
                                                    <i class="fas fa-undo"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-success" title="Marquer comme complétée">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                            }
                                        </form>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Version Mobile (Cartes) -->
        <div class="d-lg-none">
            <div class="row row-cols-1 g-3">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0 text-truncate">@item.Title</h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <p class="card-text small text-muted mb-2">
                                        <strong>Description:</strong> @item.Description
                                    </p>
                                }
                                
                                <p class="mb-2">
                                    <strong>Status:</strong>
                                    @if (item.IsCompleted)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">In Progress</span>
                                    }
                                </p>

                                @if (item.DueDate.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Due Date:</strong> 
                                        <small>@item.DueDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                    </p>
                                }

                                <p class="mb-3">
                                    <strong>Created:</strong> 
                                    <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </p>
                            </div>
                            <div class="card-footer bg-light">
                                <div class="d-flex gap-2 justify-content-between">
                                    <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="m-0 flex-grow-1">
                                        @if (item.IsCompleted)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-secondary" title="Mark as incomplete">
                                                <i class="fas fa-undo"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success" title="Mark as complete">
                                                <i class="fas fa-check-circle"></i> Complete
                                            </button>
                                        }
                                    </form>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
